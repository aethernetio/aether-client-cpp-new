                            ${libsodium_crypto_sign_srcs}
                            ${libsodium_crypto_stream_srcs}
                            ${libsodium_crypto_verify_srcs}
                            ${libsodium_randombytes_srcs}
                            INCLUDE_DIRS ${CMAKE_CURRENT_SOURCE_DIR}
                            INCLUDE_DIRS ${include_dirs}
